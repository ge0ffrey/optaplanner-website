.panel.panel-default
  .panel-heading Latest release
  .panel-body
    %ul.list-unstyled
      %li(style="margin-bottom: 10px;")
        .title
          %a{:href => relative("/download/releaseNotes/releaseNotes#{site.pom.latestFinal.releaseNotesVersion}.html", page.outputPage)}
            #{site.pom.latestFinal.version} released
        .small
          #{site.pom.latestFinal.releaseDate.strftime('%a %-d %B %Y')}
      - if !(site.pom.latest.version == site.pom.latestFinal.version)
        %li(style="margin-bottom: 10px;")
          .title
            %a{:href => relative("/download/releaseNotes/releaseNotes#{site.pom.latest.releaseNotesVersion}.html", page.outputPage)}
              #{site.pom.latest.version} released
          .small
            #{site.pom.latest.releaseDate.strftime('%a %-d %B %Y')}
