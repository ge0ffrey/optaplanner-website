- user = site.users.find {|e| !e.userId.nil? and page.userId.eql? e.userId }
.userBadge
  - if page.mode.eql? 'inline'
    .span
      %img.img-rounded.pull-left{:src => "https://www.gravatar.com/avatar/" + user.gravatarHashId + "?s=20&d=mm"}
      &nbsp;#{user.fullName}
  - else
    .well.well-sm(style= "padding: 5px; width: #{(page.mode.eql? 'long') ? '600px' : '320px'};")
      .media
        %img.img-rounded.pull-left{:src => "https://www.gravatar.com/avatar/" + user.gravatarHashId + "?s=50&d=mm", :style => "width: 50px;", :alt => "Avatar #{user.fullName}"}
        .media-body
          %h4.media-heading #{user.fullName}
          %hr(style="margin:2px auto; border-color: #ddd;")
          %span.pull-right
            - if !user.twitterUsername.empty?
              %a{:href => "https://twitter.com/" + user.twitterUsername}<
                %img{:src => relative("/headerFooter/twitterLogo.png", page.outputPage), :alt => "Twitter"}
            - if !user.facebookUsername.empty?
              %a{:href => "https://www.facebook.com/" + user.facebookUsername}<
                %img{:src => relative("/headerFooter/facebookLogo.png", page.outputPage), :alt => "Facebook"}
            - if !user.linkedInId.empty?
              %a{:href => "https://www.linkedin.com/in/" + user.linkedInId}<
                %img{:src => relative("/headerFooter/linkedInLogo.png", page.outputPage), :alt => "LinkedIn"}
            - if !user.githubUsername.empty?
              %a{:href => "https://github.com/" + user.githubUsername}<
                %img{:src => relative("/headerFooter/gitHubLogo.png", page.outputPage), :alt => "GitHub"}
          %p.small #{user.role}
          - if page.mode.eql? 'long'
            - if !user.email.empty?
              %p
                %span.emailSupportPopover
                  %strong Email:
                  #{user.email}
            - if !user.employedBy.empty?
              %p
                %strong Employed by:
                #{user.employedBy}
            - if !user.contributionsDescription.empty?
              %p
                %strong Contributions:
                #{user.contributionsDescription}
            - if !user.biography.empty?
              %p
                %strong Bio:
                #{user.biography}

